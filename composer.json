{
    "name": "ambersive/api",
    "description": "This package provides some helper methods for a faster api development.",
    "license": "MIT",
    "authors": [
        {
            "name": "Manuel.PirkerIhl",
            "email": "manuel.pirker-ihl@ambersive.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "pragmarx/yaml": "^1.0.0",
        "pragmarx/version": "dev-master",
        "parsedown/laravel": "^1.2",
        "illuminate/support": "6.*|7.*",
        "emadadly/laravel-uuid": "1.*",
        "darkaonline/l5-swagger": "6.*|7.*",
        "spatie/laravel-permission": "^2.36|3.*",
        "tymon/jwt-auth": "1.*"
    },
    "require-dev": {
        "php" : ">=7.4",
        "illuminate/support": "5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|6.*|7.*",
        "laravel/framework": "5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|6.*|7.*",
        "phpunit/phpunit": "^9.3@dev",
        "orchestra/testbench": "3.8.*|4.*|5.*",
        "orchestra/testbench-browser-kit": "6.*"
    },
    "autoload": {
        "psr-4": {
            "AMBERSIVE\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AMBERSIVE\\Tests\\": "tests/",
            "App\\": "vendor/orchestra/testbench-core/laravel/app\/"
        }
    },
    "extra": {
        "component": "package",
        "laravel": {
            "providers": [
                "AMBERSIVE\\Api\\ApiServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "vendor/bin/phpunit"
        ]
    }
}
